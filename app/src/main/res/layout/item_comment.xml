<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textStyle="bold"
            android:text="Name"
            android:layout_alignParentTop="false"
            android:layout_toEndOf="@+id/img_post"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"/>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                />

        </FrameLayout>

        <TextView
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_textComment"
            android:text="Text"
            android:layout_alignParentTop="false"
            android:layout_toEndOf="@+id/img_post"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <TextView
                android:text="1233"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/likesAmount"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_Like" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:text="5 минут назад"
                android:id="@+id/tv_PostDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:paddingLeft="16dp"
                android:src="@drawable/ic_thumb_up_outline_grey600_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_Like"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>